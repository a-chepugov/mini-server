root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[{*.cjs,*.js}]
max_line_length = 120

[*.json]
indent_style = space

[{*.ts,*.ats}]
max_line_length = 120

[*.md]
max_line_length = 120
indent_style = tab
